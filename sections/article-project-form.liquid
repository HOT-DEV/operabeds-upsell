{% comment %}
    The Project Form section
{% endcomment %}

{%- liquid
    assign project_form_heading = article.metafields.accentuate.project_form_heading | default: section.settings.heading
    assign project_form_description = article.metafields.accentuate.project_form_description | default: section.settings.description
-%}

<section class="bg-athens-gray" data-section-type="article-project-form" data-section-id="{{ section.id }}">
    <div class="container site-padding py-16 py-lg-20 py-xxl-25">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10 col-xl-8 col-xxl-6">
                <div class="bg-white p-8 p-md-12 p-lg-16 text-center">
                    {%- if project_form_heading != blank -%}
                        <h2 class="u-heading-md text-elephant">
                            {{- project_form_heading | escape -}}
                        </h2>
                    {%- endif -%}
                    {%- if project_form_description != blank -%}
                        <p class="m-0 text-14">
                            {{- project_form_description | escape -}}
                        </p>
                    {%- endif -%}
                    <div class="mt-12 mt-lg-16">
                        <!-- www.123formbuilder.com script begins here -->
                        <iframe allowTransparency="true" style="min-height:500px; height:inherit; overflow:auto;" width="100%" id="contactform123" name="contactform123" marginwidth="0" marginheight="0" frameborder="0" src="//www.123formbuilder.com/my-contact-form-5455337.html"><p>Your browser does not support iframes. The contact form cannot be displayed. Please use another contact method (phone, fax etc)</p></iframe>
                        <!-- www.123formbuilder.com script ends here -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{%- schema -%}
{
    "name": "Form",
        "settings": [
        {
            "type": "header",
            "content": "Default form settings"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Form heading",
            "default": "Work with Opera - Get in touch"
        },
        {
            "type": "text",
            "id": "description",
            "label": "Form description"
        }
    ],
    "blocks": []
}
{%- endschema -%}