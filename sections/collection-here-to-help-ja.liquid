{% schema %}
  {
    "name": "We're here to help",
    "settings": [
   {
       "type": "text",
       "id": "heading",
       "label": "Title",
       "default": "We're here to help"
   },
  {
      "type": "richtext",
      "id": "content",
      "label": "label",
      "default": "<p>Call us on 0330 127 1617 if you have any questions.</p>"
  },
 {
     "type": "image_picker",
     "id": "image",
     "label": "Image"
 }
   ]
}
{% endschema %}