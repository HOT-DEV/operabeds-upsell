{% comment %}
    The Bespoke Design - Inspiration section template.
{% endcomment %}

{%- if section.blocks.size > 0 -%}
    <div class="container site-padding mt-18 mt-md-24">
        <div class="row justify-content-sm-center">
            <div class="col-sm-8 col-md-6 text-center">
                <h2 class="text-24 text-md-36 text-elephant font-weight-normal">{{ section.settings.heading }}</h2>
            </div>
        </div>
    </div>
    <div class="t-bespoke-design__gallery swiper-container py-10" data-bespoke-design-gallery-slider>
        <div class="swiper-wrapper">
            {%- for block in section.blocks -%}
            {%- liquid 
                assign image = block.settings.image
                assign image_url = image | img_url: '300x300'
                assign image_alt = image.alt | default: section.settings.heading
            -%}
                <div class="swiper-slide">
                    <img src="{{- image_url -}}" class="mt-3" alt="{{ block.settings.image_accessibility }}"/>
                </div>
            {%- endfor -%}
        </div>
    </div>
{%- endif -%}

{% schema %}
{
    "name": "Inspiration",
    "settings": [
        {
            "type": "header",
            "content": "Settings"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "A little bit of inspiration"
        }
    ],
    "blocks": [
        {
            "type": "image-gallery",
            "name": "Image Gallery",
            "settings": [
                {
                    "type": "header",
                    "content": "Block Settings"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image (Square)",
                    "info": "Recommended size: 300x300"
                },
                {
                    "type": "text",
                    "id": "image_accessibility",
                    "label": "Image Description (Accessibility)"
                }
            ]
        }
    ]
}
{% endschema %}