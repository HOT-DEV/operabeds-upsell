{% comment %}
    The Contact page section template.
{% endcomment %}

<section aria-labelledby="page-title">
    <header>
        <div class="container site-padding py-16 pt-lg-28 pb-lg-22">
            <div class="row">
                <div class="col-12 text-center text-md-left">
                    {%- if section.settings.sub_heading != blank -%}
                        <p class="text-14 text-uppercase tracking-hd-widest text-blue-diane mb-1 font-weight-medium">{{- section.settings.sub_heading -}}</p>
                    {%- endif -%}
                    <h1 class="text-36 text-lg-46 text-blue-diane font-weight-normal" id="page-title">{{- page.title | escape }}</h1>
                </div>
            </div>
        </div>
    </header>
    <div class="container site-padding mb-12 mb-md-24">
        <div class="row">
            {%- for block in section.blocks -%}
                {% liquid
                    assign image = block.settings.image
                %}
                <div class="col-md-6 {% unless forloop.last == true -%}mb-26 mb-md-0{%- endunless %}">
                    <div class="t-contact__card">
                        <h2 class="text-24 text-blue-diane font-weight-normal text-center text-md-left mb-6">
                            {{- block.settings.title | escape -}}
                        </h2>
                        <picture class="js-lazy" data-iesrc="{{- image | img_url: '800x' -}}" data-alt="{{- block.settings.heading | escape -}}">
                            <source srcset="{{- image | img_url: '800x' -}}" media="(max-width: 575px)">
                            <source srcset="{{- image | img_url: '600x' -}}" media="(min-width: 576px)">
                        </picture>
                        <noscript>
                            <picture>
                                <source srcset="{{- image | img_url: '600x' -}}" media="(max-width: 575px)">
                                <source srcset="{{- image | img_url: '600x' -}}" media="(min-width: 576px)">
                                <img src="{{- image | img_url: '600x' -}}" alt="{{- block.settings.heading | escape -}}">
                            </picture>
                        </noscript>
                        <ul class="mb-8">
                            <li>
                                <svg class="mr-2" aria-hidden="true" role="presentation">
                                    <use xlink:href="#sprite-{{- block.settings.panel_1_icon | escape -}}"></use>
                                </svg>
                                <span class="text-16 text-blue-diane font-weight-medium">{{- block.settings.text_01 | escape -}}</span>
                            </li>
                            <li>
                                <svg class="mr-2" aria-hidden="true" role="presentation">
                                    <use xlink:href="#sprite-{{- block.settings.panel_2_icon | escape -}}"></use>
                                </svg>
                                <span class="text-16 text-blue-diane font-weight-medium">{{- block.settings.text_02 | escape -}}</span>
                            </li>
                            <li>
                                <svg class="mr-2" aria-hidden="true" role="presentation">
                                    <use xlink:href="#sprite-{{- block.settings.panel_3_icon | escape -}}"></use>
                                </svg>
                                <span class="text-16 text-blue-diane font-weight-medium">{{- block.settings.text_03 | escape -}}</span>
                            </li>
                        </ul>
                        <p class="text-24 text-blue-diane font-weight-medium">
                            {{- 'Call' | escape }}
                            <a href="tel:{{- block.settings.phone_number | replace: ' ', '' | escape -}}" aria-label="Call {{- block.settings.phone_number | escape -}}">
                                <span class="rTapNumber413992">{{- block.settings.phone_number | escape -}}</span>
                            </a>
                        </p>
                        <p class="text-24 text-blue-diane font-weight-medium mb-0">
                            {{- 'Email' | escape }}
                            <a href="mailto:{{- block.settings.email_address | escape -}}" aria-label="Email {{- block.settings.email_address | escape -}}">
                                {{- block.settings.email_address | escape -}}
                            </a>
                        </p>
                    </div>
                </div>
            {%- endfor -%}
        </div>
    </div>
    <div class="bg-athens-gray py-14 py-md-20 mb-12">
        <div class="container site-padding">
            <div class="row justify-content-sm-center">
                <div class="col-sm-10 col-md-8">
                    <div class="bg-white py-12 py-md-24 px-6 px-md-38 text-center">
                        {%- if section.settings.form_heading != blank -%}
                            <h2 class="text-24 text-36 text-blue-diane font-weight-normal mb-6">{{- section.settings.form_heading -}}</h2>
                        {%- endif -%}
                        {%- if section.settings.form_text != blank -%}
                            <div class="row justify-content-md-center mb-10 mb-md-13">
                                <div class="col-md-8">
                                    {{- section.settings.form_text -}}
                                </div>
                            </div>
                        {%- endif -%}
                        {%- render 'contact-form', form_options: section.settings.form_subject -%}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container site-padding pt-12 pb-14 pb-md-24">
        <div class="d-flex justify-content-center mb-26 mb-md-16">
            <script type="text/javascript" src="//widget.trustpilot.com/bootstrap/v5/tp.widget.bootstrap.min.js" async></script>
            <div class="trustpilot-widget" data-locale="en-GB" data-template-id="53aa8912dec7e10d38f59f36" data-businessunit-id="6015ba1d33fc5e0001b26c2b" data-style-height="140px" data-style-width="100%" data-theme="light" data-stars="4,5" data-review-languages="en">
                <a href="https://uk.trustpilot.com/review/operabeds.com" target="_blank" rel="noopener">Trustpilot</a>
            </div>
        </div>
        <div class="row justify-content-md-between align-items-md-stretch">
            <div class="col-md-5 d-flex flex-column justify-content-md-center py-md-12">
                {%- if section.settings.showroom_heading != blank -%}
                    <h2 class="text-24 text-md-36 text-blue-diane font-weight-normal mb-10">{{- section.settings.showroom_heading -}}</h2>
                {%- endif -%}
                {{- section.settings.showroom_text -}}
                {%- if section.settings.showroom_url -%}
                    <a href="{{- section.settings.showroom_url -}}" class="c-btn-outline c-btn-outline--blue align-self-start mt-8 mt-md-10" aria-label="">{{- section.settings.showroom_url_text -}}</a>
                {%- endif -%}
            </div>
            <div class="col-md-6 mt-8 mt-md-0">
                <picture class="t-contact__showroom-image js-lazy" data-iesrc="{{- section.settings.showroom_image | img_url: '800x' -}}" data-alt="{{- section.settings.showroom_heading | escape -}}">
                    <source srcset="{{- section.settings.showroom_image | img_url: '800x' -}}" media="(max-width: 575px)">
                    <source srcset="{{- section.settings.showroom_image | img_url: '600x' -}}" media="(min-width: 576px)">
                </picture>
                <noscript>
                    <picture>
                        <source srcset="{{- section.settings.showroom_image | img_url: '800x' -}}" media="(max-width: 575px)">
                        <source srcset="{{- section.settings.showroom_image | img_url: '600x' -}}" media="(min-width: 576px)">
                        <img src="{{- section.settings.showroom_image | img_url: '600x' -}}" alt="{{- section.settings.showroom_heading | escape -}}">
                    </picture>
                </noscript>
            </div>
        </div>
    </div>
    <div class="t-contact__map">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1178.307499095749!2d-0.35764034158046326!3d53.79633957928549!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4878bf043d9feb65%3A0x3089ce723e30540!2sOpera%C2%AE+Care+Bed%2C+Chair+%26+Mattress+Showroom+(by+Alpine+HC)!5e0!3m2!1sen!2suk!4v1534858771497" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
    {%- if section.settings.answers_heading != blank and section.settings.answers_url -%}
