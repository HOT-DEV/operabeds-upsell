{% comment %}
    The Bespoke Design - Footer section template.
{% endcomment %}
{%- if section.blocks.size > 0 -%}
    {%- for block in section.blocks -%}
        <div data-block-id="{{ block.id }}" data-block-type="{{ block.type | handleize }}" {{ block.shopify_attributes }} id="{{ block.settings.title | handleize }}" {% if forloop.last %}class="mb-24"{% endif %}>
            {%- render 'page-image-and-text-with-features' 
                    _image:                 block.settings.image
                    _heading:               block.settings.heading,
                    _text_panel_position:   block.settings.text_panel_position,
                    _text:                  block.settings.text,
                    _cta_url:               block.settings.cta_url
                    _cta_text:              block.settings.cta_text,
                    _features_list:         block.settings.features_list,
                    _index:                 forloop.index
                -%}
        </div>
    {%- endfor -%}
{%- endif -%}
{% schema %}
{
    "name": "Footer",
    "settings": [
        {
            "type": "header",
            "content": "Settings"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "The Bespoke Bed Process"
        },
        {
            "type": "header",
            "content": "Footer Content"
        },
        {
            "type": "text",
            "id": "footer_heading",
            "label": "Heading",
            "default": "Delivery"
        },
        {
            "type": "text",
            "id": "footer_text",
            "label": "Text",
            "default": "Our production team will craft your bed to your exact specification."
        }
    ],
    "blocks": [
        {
            "type": "image-and-text",
            "name": "Image & Text Panel",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image Picker"
                },  
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading"
                },    
                {
                    "type": "richtext",
                    "id": "text",
                    "label": "Text"
                },
                {
                    "type": "header",
                    "content": "Features"
                },
                {
                    "type": "textarea",
                    "id": "features_list",
                    "label": "Feature List",
                    "info": "Each new lines is a new feature bullet"
                }
            ]
        }
    ]
}
{% endschema %}