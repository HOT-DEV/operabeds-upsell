{% comment %}
    The Bespoke Design - Wood section template.
{% endcomment %}
{%- if section.blocks.size > 0 -%}
    <div class="container site-padding mt-12 mt-md-20">
        <div class="row justify-content-sm-center mb-10">
            <div class="col-md-6 text-center">
                <h2 class="text-18 text-36 text-blue-diane mb-8 font-weight-normal leading-normal">{{ section.settings.heading }}</h2>
                {%- if section.settings.text -%}
                    <p>{{ section.settings.text }}</p>
                {%- endif -%}
            </div>
        </div>
        <div class="t-bespoke-design__slider is-headboards swiper-container" data-bespoke-design-slider>
            <div class="swiper-wrapper">
                {%- for block in section.blocks -%}
                    {%- liquid 
                        assign image = block.settings.image
                        assign title = block.settings.title
                        assign image_url = image | img_url: '312x208'
                        assign image_alt = image.alt | default: title
                    -%}
                    <div class="swiper-slide" data-bespoke-design-slide>
                        <img src="{{- image_url -}}" class="mb-4" alt="{{ image_alt }}"/>
                        <span class="text-14 text-uppercase text-blue-diane font-weight-light tracking-widest">{{ title }}</span>
                    </div>
                {%- endfor -%}
            </div>
            <div class="row justify-content-md-center">
                <div class="col-md-10">
                    <div class="t-bespoke-design__slider__nav mt-6">
                        <button type="button" class="swiper-button-prev" data-bespoke-design-slider-prev>
                            <svg class="icon">
                                <use xlink:href="#sprite-chevron-left"></use>
                            </svg>
                        </button>
                        <div class="swiper-pagination d-md-none" data-bespoke-design-slider-pagination></div>
                        <div class="swiper-scrollbar-custom d-none d-md-block" data-bespoke-design-slider-scrollbar></div>
                        <button type="button" class="swiper-button-next" data-bespoke-design-slider-next>
                            <svg class="icon">
                                <use xlink:href="#sprite-chevron-right"></use>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{%- endif -%}


{% schema %}
{
    "name": "Wood Finishes",
    "settings": [
        {
            "type": "header",
            "content": "Content"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Wood Finishes"
        },
        {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
        }
    ],
    "blocks": [
        {
            "type": "image-with-label",
            "name": "Image with Label",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Tab Name",
                    "info": "Required"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                }
            ]
        }
    ]
}
{% endschema %}