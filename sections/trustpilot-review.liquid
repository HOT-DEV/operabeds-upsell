{%- comment -%}
    Page Section for template/page.trustpilot-review.liquid
{%- endcomment -%}
<section aria-labelledby="page-title">
    {%- render 'page-header',
        image_mobile:           section.settings.image_mobile,
        image_tablet:           section.settings.image_tablet,
        image_desktop:          section.settings.image_desktop,
        image_alt:              image_alt,
        heading:                page.title,
        strapline:              section.settings.page_strapline,
        page_content:           null,
        _add_header_element:    null,
        _image_store:           null,
    -%}
  <div class="container site-padding my-8 mb-lg-12">
    <div class="row justify-content-center">
      <div class="col-12 text-center mb-12">
        <a class="mt-10 c-btn-outline c-btn-outline--blue py-md-6 px-md-12 text-20" id="trustpilot-review" href="https://uk.trustpilot.com/evaluate/operabeds.com?stars=5">Leave us a review</a>
      </div>
      <div class="col-12 mt-0">
        <!-- TrustPilot Carousel -->
        <script type="text/javascript" src="//widget.trustpilot.com/bootstrap/v5/tp.widget.bootstrap.min.js" async></script>

        <div class="trustpilot-widget" data-locale="en-GB" data-template-id="539ad60defb9600b94d7df2c" data-businessunit-id="6015ba1d33fc5e0001b26c2b" data-style-height="500px" data-style-width="100%" data-theme="light" data-stars="1,2,3,4,5" data-review-languages="en" data-text-color="#0f2437">
          <a href="https://uk.trustpilot.com/review/operabeds.com" target="_blank" rel="noopener">Trustpilot</a>
        </div>
        <!-- End of TrustPilot carousel -->
      </div>
    </div>
  </div>
</section>

<style>

  .c-btn-outline#trustpilot-review {text-decoration: none; color: #253d52; font-weight: 700; line-height: 1.25; font-size: 0.875rem; cursor: pointer; white-space: nowrap; }
  
  .c-btn-outline#trustpilot-review:hover {
    text-decoration: none;
    outline: none;
    color: #fff;
  }

  /* Resize of header image */

  @media screen and (max-width: 767.98px) {
    .c-page-header {
      height: 300px!important;
    }
  }  

  @media screen and (min-width: 768px) and (max-width: 1365.98px) {
    .c-page-header {
      height: 325px!important;
    }
  }  

  @media screen and (min-width: 1366px) and (max-width: 1919.98px) {
    .c-page-header {
      height: 350px!important;
    }
  }  

  @media screen and (min-width: 1920px) and (max-width: 3739.98px) {
    .c-page-header {
      height: 500px!important;
    }
  }  

  @media screen and (min-width: 3840px) {
    .c-page-header {
      height: 1000px!important;
    }
  }     
  
</style>

{% schema %}
{
    "name": "Content",
    "settings": [
        {
            "type": "header",
            "content": "Image",
            "info": "Add a background image to the header."
        },
        {
            "type": "image_picker",
            "id": "image_desktop",
            "label": "Desktop Image"
        },
        {
            "type": "image_picker",
            "id": "image_tablet",
            "label": "Tablet Image"
        },
        {
            "type": "image_picker",
            "id": "image_mobile",
            "label": "Mobile Image"
        }
    ],
    "blocks": [
    ]
}
{% endschema %}