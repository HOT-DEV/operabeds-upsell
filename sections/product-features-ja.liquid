{% schema %}
{
    "name": "Headboards",
    "settings": [
        {
            "type": "header",
            "content": "Content"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Headboards"
        },
        {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
        }
    ],
    "blocks": [
        {
            "type": "image-with-label",
            "name": "Image with Label",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Tab Name",
                    "info": "Required"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                }
            ]
        }
    ]
}
{% endschema %}