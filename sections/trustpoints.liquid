{% comment %}
The Trustpoint section template.
{% endcomment %}

<section class="my-8 my-xl-12" data-section-type="trustpoints" data-section-id="{{ section.id }}">
    <div class="container site-padding">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-10">
                {%- if section.settings.show_divider_top -%}
                    {%-
                        render 'divider',
                        class: 'mb-8 mb-xl-12'
                    -%}
                {%- endif -%}
                <div class="row no-gutters mb-n10 align-items-center justify-content-lg-around">
                    {%- for tp_item in section.blocks -%}
                        {%- if tp_item.settings.icon != blank -%}
                            <div class="col-12 col-md-6 col-lg-auto mb-10 text-center text-md-left text-lg-center" data-block-id="{{ block.id }}" data-block-type="{{ block.type | handleize }}" {{ block.shopify_attributes }}>
                                {%-
                                    render 'trustpoint',
                                    icon: tp_item.settings.icon,
                                    text: tp_item.settings.title
                                -%}
                            </div>
                        {%- endif -%}
                    {%- endfor -%}
                </div>
                {%- if section.settings.show_divider_bottom -%}
                    {%-
                        render 'divider',
                        class: 'mt-8 mt-xl-12'
                    -%}
                {%- endif -%}
            </div>
        </div>
    </div>
</section>

