            "label": "Menu 1 Heading"
        },
        {
        "type": "link_list",
        "id": "footer_about_menu",
        "label": "Menu 1",
        "default": "footer"
        },
        {
            "type": "text",
            "id": "footer_tools_menu_title",
            "label": "Menu 2 Heading"
        },
        {
        "type": "link_list",
        "id": "footer_tools_menu",
        "label": "Menu 2",
        "default": "footer"
        },
        {
            "type": "text",
            "id": "footer_support_menu_title",
            "label": "Menu 3 Heading"
        },
        {
        "type": "link_list",
        "id": "footer_support_menu",
        "label": "Menu 3",
        "default": "footer"
        },
        {
        "type": "link_list",
        "id": "footer_legal_menu",
        "label": "Legals",
        "default": "footer"
        }
    ],
    "max_blocks": 10,
    "blocks": [
        {
            "type": "logo_image",
            "name": "Logo",
            "settings": [
                {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
                },
                {
                "type": "text",
                "id": "alt",
                "label": "Alt Text"
                },
                {
                "type": "url",
                "id": "link",
                "label": "Link",
                "info": "Optional"
                }
            ]
        }
    ]
