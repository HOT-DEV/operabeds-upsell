{
    "name": {
        "de": "Fußzeile",
        "en": "Footer",
        "es": "Pie de página",
        "fr": "Pied de page",
        "it": "Footer",
        "ja": "フッター",
        "pt-BR": "Rodapé"
    },
    "settings": [
        {
        "type": "header",
