<section class="s-cta-with-icon bg-white" data-section-id="{{ section.id }}" style="">
    <div class="container site-padding">
        <div class="bg-elephant text-center justify-content-center pt-12 pb-16">
            <div class="col">
                <svg class="s-cta_icon" aria-hidden="true" role="presentation">
                    <use xlink:href="#{{ section.settings.icon }}"></use>
                </svg>

            </div>
            <div class="col">
                <h3 class="text-24 font-weight-normal leading-tight text-white mt-8 mb-12">
                    {{ section.settings.title }}
                </h3>
            </div>
            <div class="col">
                <a href="{{ section.settings.button_link }}" class="btn-autoturn text-capitalize">
                    {{ section.settings.button_label}}
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    .btn-autoturn {color: #ffffff;
        border: 2px solid white;
        padding: 1rem 3rem;}

    .btn-autoturn:hover {background-color: #253D52;
        color: #ffffff;
        text-decoration: none;}

    .s-cta_icon {width: 3.5rem; height: 3.5rem;}
</style>

{% schema %}
{
    "name": "Section - CTA with icon",
    "settings": [
      {
          "type": "select",
          "id": "icon",
          "label": "Which calculator?",
          "options": [
              {
                  "value": "calculator-white",
                  "label": "Calculator - White"
              },
              {
                "value": "calculator-taupe",
                "label": "Calculator - Taupe"
              }, 
            {
                "value": "calculator-black",
                "label": "Calculator - Black"
            }                          
          ]
      },
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Welcome to Opera Beds CTA section with icon"
        },
        {
            "type": "text",
            "id": "button_label",
            "label": "Button - Label"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button - Link"
        }
    ],
    "presets": [
        {
            "name": "Section - CTA with icon",
            "category": "text"
        }
    ]
}
{% endschema %}
