{% comment %}
    The Bespoke Design - Bed Process section template.
{% endcomment %}
{%- if section.blocks.size > 0 -%}
    <div class="container site-padding">
        <h2 class="text-14 text-md-36 text-uppercase text-md-capitalize font-weight-medium font-weight-md-normal tracking-widest tracking-md-normal text-elephant  text-center">
            {{ section.settings.heading }}
        </h2>
        <div class="t-bespoke-design__process mt-12 mt-md-28">
            {%- for block in section.blocks -%}
                {%- liquid 
                    assign image = block.settings.image
                    assign title = block.settings.title
                    assign image_url = image | img_url: '461x308'
                    assign image_alt = image.alt | default: title
                -%}
                <div class="t-bespoke-design__process__row">
                    <div class="t-bespoke-design__process__block">
                        <div class="row mb-6 mb-md-8">
                            <div class="col-md-4 mb-6 mb-md-0">
                                <h3 class="text-24 text-elephant font-weight-normal mb-0">{{ block.settings.heading }}</h3>
                            </div>
                            <div class="col-md-8">
                                <p class="mb-0">{{ block.settings.text }}</p>
                            </div>
                        </div>
                        <img data-src="{{- image_url -}}" class="js-lazy" alt="{{ image_alt }}"/>
                    </div>
                </div>
            {%- endfor -%}
        
            <div class="row justify-content-sm-center mt-6">
                <div class="col-sm-6 col-md-4 text-md-center pl-14 mt-n11 pl-md-0 mt-md-0">
                    <h4 class="text-24 text-elephant font-weight-normal mb-8">{{ section.settings.footer_heading }}</h4>
                    {%- if section.settings.footer_text.size > 0 -%}
                        <p>{{ section.settings.footer_text }}</p>
                    {%- endif -%}
                </div>
            </div>
        </div>
    </div>
{%- endif -%}

{% schema %}
{
    "name": "Bed Process",
    "settings": [
        {
            "type": "header",
            "content": "Settings"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "The Bespoke Bed Process"
        },
        {
            "type": "header",
            "content": "Footer Content"
        },
        {
            "type": "text",
            "id": "footer_heading",
            "label": "Heading",
            "default": "Delivery"
        },
        {
            "type": "text",
            "id": "footer_text",
            "label": "Text",
            "default": "Our production team will craft your bed to your exact specification."
        }
    ],
    "blocks": [
        {
            "type": "process-step",
            "name": "Process Step",
            "settings": [
                {
                    "type": "header",
                    "content": "Block Settings"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading",
                    "default": "Heading"
                },
                {
                    "type": "text",
                    "id": "text",
                    "label": "Text"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                }
            ]
        }
    ]
}
{% endschema %}