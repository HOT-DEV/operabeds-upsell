<script>
        // Script to scroll down and open review section tab or accordion when click review stars on product page
        const reviewStars = document.querySelector('.product-trustpilot-badge');
        reviewStars.addEventListener('click', (event) => {
            document.getElementById("product-resources").scrollIntoView();
            document.querySelector(`[id*="-reviews"]`).click();      
            
        });
</script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>      

<script>
    $(document).ready(function() {
        // If we have any HK, pre-select dimensions tab and show first HK
        var dimensionsContents = $(".dimensions-content");
        if(dimensionsContents.length) {
            // Click on dimensions tab
            setTimeout(function() {
                $("li[data-tab-name='dimensions'] button").click();
            }, 50);

            $(".hk1").show().css("display", "flex");
        }
        
        $('[data-action="width-selector"]').each(function() {
            $(this).on('change', function(){
                var selectedValue = $(this).val(); 
                $("div.dimensions-content").hide();
                $(".hk"+selectedValue).show().css("display", "flex");
                console.log('width selector change');
            });
        });
    });
</script>