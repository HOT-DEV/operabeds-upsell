{% comment %}
    The Customers - Login template.
{% endcomment %}

<section aria-labelledby="page-title">
    <header>
        <div class="container site-padding py-5">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 mb-4 mt-4 mb-md-0">
                    <h1 class="mb-0" id="page-title">Sign in to your account</h1>
                </div>
            </div>
        </div>
    </header>
    <div class="container site-padding">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 mb-4 mb-md-0">
                {%- if page.content != blank -%}
                    <div class="c-rte">
                        {{- page.content -}}
                    </div>
                {%- endif -%}

                {%- render 'login-form' -%}
            </div>
        </div>
    </div>
</section>