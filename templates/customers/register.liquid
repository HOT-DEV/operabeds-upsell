{% comment %}
    The Customers - Register template.
{% endcomment %}

<section aria-labelledby="page-title">
    <header>
        <div class="container site-padding py-5">
            <div class="row justify-content-center">
                <div class="col-12">
                    <h1 class="mb-0" id="page-title">Create Account</h1>
                </div>
            </div>
        </div>
    </header>
    <div class="container site-padding">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 mb-4 mb-md-0">
                {%- if page.content != blank -%}
                    <div class="c-rte">
                        {{- page.content -}}
                    </div>
                {%- endif -%}

                {%- form 'create_customer', class: 'c-form', id: 'register-form', aria-label: 'Register form' -%}
                    <div class="c-form__content">
                        {{- form.errors | default_errors | replace: 'class="errors"', 'class="c-alert c-alert--error" role="alert"' -}}

                        <div class="c-form-field mb-4">
                            <label class="c-label" for="first-name">First Name</label>
                            <input class="c-form-input{% if show_errors == true and form.errors contains 'first_name' %} c-form-input--error{% endif %}" id="first-name" name="customer[first_name]" type="text" placeholder="First Name" />
                        </div>

                        <div class="c-form-field mb-4">
                            <label class="c-label" for="last-name">Last Name</label>
                            <input class="c-form-input{% if show_errors == true and form.errors contains 'last_name' %} c-form-input--error{% endif %}" id="last-name" name="customer[last_name]" type="text" placeholder="Last Name" />
                        </div>

                        <div class="c-form-field mb-4">
                            <label class="c-label" for="email">E-Mail Address</label>
                            <input class="c-form-input{% if show_errors == true and form.errors contains 'email' %} c-form-input--error{% endif %}" id="email" name="customer[email]" type="email" placeholder="E-Mail Address" autocorrect="off" autocapitalize="off" autocomplete="email" />
                        </div>

                        <div class="c-form-field mb-4">
                            <label class="c-label" for="password">Password</label>
                            <input class="c-form-input{% if show_errors == true and form.errors contains 'password' %} c-form-input--error{% endif %}" id="password" name="customer[password]" type="password" />
                        </div>

                        <div class="d-flex flex-row flex-wrap justify-content-between align-items-center mb-4">
                            <button class="c-btn" type="submit">Create Account</button>
                        </div>

                        <div class="d-flex flex-row flex-wrap justify-content-between align-items-center">
                            {{ 'Sign in' | customer_login_link }}
                            <a href="{{ shop.url }}">Return to the store</a>
                        </div>
                    </div>
                {%- endform -%}
            </div>
        </div>
    </div>
</section>